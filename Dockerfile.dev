# Development Dockerfile for hot reload
FROM oven/bun:1.1.34-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* bunfig.toml ./

# Install dependencies
RUN bun install

# Copy all files
COPY . .

# Copy environment file
COPY .env.local ./

# Expose port
EXPOSE 3000

# Run in development mode
CMD ["bun", "run", "dev"]
